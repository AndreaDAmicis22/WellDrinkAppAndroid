<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gdlBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_gdlEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/profile_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profile_txtNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/profile_txtNameProfile"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/profile_gdlEnd"
        app:layout_constraintStart_toStartOf="@+id/profile_gdlBegin"
        app:layout_constraintTop_toBottomOf="@id/profile_img" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/profile_grdLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toTopOf="@+id/profile_btnTop100"
        app:layout_constraintEnd_toStartOf="@+id/profile_gdlEnd"
        app:layout_constraintStart_toStartOf="@+id/profile_gdlBegin"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtNameProfile"
        app:rowCount="2">

        <Button
            android:id="@+id/profile_grd_btnFavouriteDrink"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/profile_grd_btnFavouriteDrink" />

        <Button
            android:id="@+id/profile_grd_btnFavouriteIngredient"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/profile_grd_btnFavouriteIngredient" />

        <Button
            android:id="@+id/profile_grd_btnTastedList"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/profile_grd_btnTastedList" />

        <Button
            android:id="@+id/profile_grd_btnVisitedBar"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/profile_grd_btnVisitedBar" />
    </androidx.gridlayout.widget.GridLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="316dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/md_theme_light_onBackground"
        app:layout_constraintBottom_toTopOf="@+id/profile_btnTop100"
        app:layout_constraintEnd_toEndOf="@id/profile_gdlEnd"
        app:layout_constraintStart_toStartOf="@id/profile_gdlBegin"
        app:layout_constraintTop_toBottomOf="@+id/profile_grdLeaderboard" />

    <Button
        android:id="@+id/profile_btnTop100"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/profile_btnTop100"
        app:layout_constraintEnd_toStartOf="@+id/profile_gdlEnd"
        app:layout_constraintStart_toStartOf="@+id/profile_gdlBegin"
        app:layout_constraintTop_toBottomOf="@+id/profile_grdLeaderboard" />

</androidx.constraintlayout.widget.ConstraintLayout>